<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.incidenciaFormulario">

    <ScrollView
        android:id="@+id/scrollIncidencia"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/visita_hora"
                    android:layout_width="380dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/holo_orange_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/visita_numero"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/visita_hora"
                    android:layout_toRightOf="@id/escuela_MIE"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="3dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/escuela_MIE"
                    android:layout_width="180dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/visita_hora"
                    android:layout_alignParentLeft="true"
                    android:gravity="top"
                    android:padding="3dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/escuela_MIE"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/direccion"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_below="@id/nombre"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text=" "
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/label_escuela_jornada"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/direccion"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text="JORNADA: "
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/escuela_jornada"
                    android:layout_width="180dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/direccion"
                    android:layout_alignParentRight="true"
                    android:layout_toRightOf="@id/label_escuela_jornada"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/labelParroquia"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/label_escuela_jornada"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text="PARROQUIA: "
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/parroquia"
                    android:layout_width="280dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/escuela_jornada"
                    android:layout_toRightOf="@id/labelParroquia"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


                <TextView
                    android:id="@+id/labelMotivo"
                    android:layout_width="70dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/labelParroquia"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text="MOTIVO:"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/motivo"
                    android:layout_width="310dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/parroquia"
                    android:layout_toRightOf="@id/labelMotivo"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text="MANTENIMIENTO APCI "
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/labelEmbajadorIN"
                    android:layout_width="100dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/labelMotivo"
                    android:layout_alignParentLeft="true"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text="EMBAJADOR IN:"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/embajadorIN"
                    android:layout_width="280dp"
                    android:layout_height="24dp"
                    android:layout_below="@id/motivo"
                    android:layout_toRightOf="@id/labelEmbajadorIN"
                    android:layout_weight="1"
                    android:gravity="top"
                    android:padding="3dp"
                    android:text="ROGER GRANDA"
                    android:textAppearance="?android:textAppearanceMedium"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />


            </RelativeLayout>


            <View
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:background="#ffffff"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:text="INCIDENCIA"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_marginBottom="3dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DESCRIPCIÓN DE LA INCIDENCIA:*"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"/>

                        <EditText
                            android:id="@+id/descripcionIncidencia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                            android:gravity="top"
                            android:minLines="3"
                            android:maxLines="8"
                            android:enabled="true"
                            android:isScrollContainer="true"
                            android:hint="Ingrese aqui la informacion...."
                            android:background="#ffffff"/>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >



                        <Button
                            android:id="@+id/btn_reportar_incidencia"
                            android:layout_gravity="right"
                            android:layout_margin="15dp"
                            android:layout_toRightOf="@id/btn_cancelar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/colorPrimary"
                            android:text="REPORTAR INCIDENCIA"/>

                    </RelativeLayout>



                </LinearLayout>



            </LinearLayout>

        </LinearLayout>

    </ScrollView>






</LinearLayout>