<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.FormTutorPartA">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FORMULARIO PEDAGOGICO"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"/>


        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="SELECCIONE LA ACTIVIDAD QUE REALIZO:"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp">

                <CheckBox
                    android:id="@+id/chboc_apci"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="APCI" />

                <CheckBox
                    android:id="@+id/chbox_internet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Internet" />

                <CheckBox
                    android:id="@+id/chbox_software"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Software" />

                <CheckBox
                    android:id="@+id/chbox_hardware"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hardware" />

                <CheckBox
                    android:id="@+id/chbox_electrico"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eléctrico" />

                <CheckBox
                    android:id="@+id/chbox_redesycom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Redes y Comunicaciónes" />

            </LinearLayout>



            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ACCION TOMADA:"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                    android:gravity="top"
                    android:minLines="3"
                    android:maxLines="8"
                    android:enabled="true"
                    android:isScrollContainer="true"
                    android:hint="Ingrese aqui la informacion...."
                    android:background="#ffffff"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginBottom="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OBSERVACIONES:"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapSentences|textNoSuggestions|textMultiLine"
                    android:gravity="top"
                    android:minLines="3"
                    android:maxLines="8"
                    android:enabled="true"
                    android:isScrollContainer="true"
                    android:hint="Ingrese aqui la informacion...."
                    android:background="#ffffff"/>
            </LinearLayout>

            <Button
                android:id="@+id/btn_siguiente"
                android:layout_gravity="right"
                android:layout_margin="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="SIGUIENTE"/>


        </LinearLayout>



    </LinearLayout>

</FrameLayout>