<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_height"
    android:background="@color/tan_background"
    android:minHeight="@dimen/list_item_height">

    <RelativeLayout
        android:id="@+id/visita_text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/visita_hora"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/visita_numero"
            android:layout_width="180dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/visita_hora"
            android:layout_weight="1"
            android:gravity="end"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/escuela_MIE"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:layout_below="@id/visita_hora"
            android:gravity="top"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/escuela_nombre"
            android:layout_width="240dp"
            android:layout_height="44dp"
            android:layout_toRightOf="@id/escuela_MIE"
            android:layout_below="@id/visita_numero"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_alignParentRight="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/escuela_jornada"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/escuela_MIE"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/escuela_direccion"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_below="@id/escuela_jornada"
            android:layout_weight="1"
            android:gravity="top"
            android:layout_alignParentLeft="true"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black" />


    </RelativeLayout>


</RelativeLayout>