<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/escuela_text_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="#FFF7DA"
    android:padding="5dp">


    <ScrollView
        android:id="@+id/scrollEscuela"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="match_parent"

            android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/visita_hora"
                android:layout_width="380dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/visita_numero"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_below="@id/visita_hora"
                android:layout_toRightOf="@id/escuela_MIE"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/escuela_MIE"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_below="@id/visita_hora"
                android:layout_alignParentLeft="true"
                android:gravity="top"
                android:padding="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/darker_gray"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombre"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/escuela_MIE"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/direccion"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/nombre"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text=" "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/label_escuela_jornada"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_below="@id/direccion"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text="JORNADA: "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/escuela_jornada"
                android:layout_width="180dp"
                android:layout_height="24dp"
                android:layout_below="@id/direccion"
                android:layout_alignParentRight="true"
                android:layout_toRightOf="@id/label_escuela_jornada"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/labelParroquia"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_below="@id/label_escuela_jornada"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text="PARROQUIA: "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/parroquia"
                android:layout_width="280dp"
                android:layout_height="24dp"
                android:layout_below="@id/escuela_jornada"
                android:layout_toRightOf="@id/labelParroquia"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp" />



            <TextView
                android:id="@+id/labelMotivo"
                android:layout_width="70dp"
                android:layout_height="24dp"
                android:layout_below="@id/labelParroquia"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text="MOTIVO:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/motivo"
                android:layout_width="310dp"
                android:layout_height="24dp"
                android:layout_below="@id/parroquia"
                android:layout_toRightOf="@id/labelMotivo"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text="MANTENIMIENTO APCI "
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/labelEmbajadorIN"
                android:layout_width="100dp"
                android:layout_height="24dp"
                android:layout_below="@id/labelMotivo"
                android:layout_alignParentLeft="true"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text="EMBAJADOR IN:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/embajadorIN"
                android:layout_width="280dp"
                android:layout_height="24dp"
                android:layout_below="@id/motivo"
                android:layout_toRightOf="@id/labelEmbajadorIN"
                android:layout_weight="1"
                android:gravity="top"
                android:padding="3dp"
                android:text="ROGER GRANDA"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@android:color/black"
                android:textSize="14sp" />

        </RelativeLayout>

            <Button
                android:id="@+id/botonCHECKIN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/accionTomada"
                android:background="@color/colorPrimary" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/map"
                android:name="com.example.root.educateappcontrolvisitas.ui.WorkaroundMapFragment"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_below="@id/botonCHECKIN"
                tools:context=".MapsActivity"
                />













        </LinearLayout>





    </ScrollView>
</LinearLayout>
