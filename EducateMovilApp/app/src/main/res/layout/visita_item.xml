<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/visita_text_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_height"
        android:layout_margin="5dp"
        android:padding="5dp"
    >

        <TextView
        android:id="@+id/visita_estado"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentLeft="true"
        android:layout_weight="1"
        android:gravity="top"
        android:padding="3dp"
        android:text="PENDIENTE"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/holo_green_light"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
            android:id="@+id/visita_hora"
            android:layout_width="180dp"
            android:layout_height="24dp"
        android:layout_below="@id/visita_estado"
        android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="top"
            android:text="8h83"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="3dp" />

    <TextView
        android:id="@+id/visita_numero"
        android:layout_width="180dp"
        android:layout_height="24dp"
        android:layout_below="@id/visita_estado"
        android:layout_toRightOf="@id/visita_hora"
        android:layout_weight="1"
        android:gravity="end"
        android:padding="3dp"
        android:text="n323232322"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="16dp" />


    <TextView
        android:id="@+id/escuela_MIE"
        android:layout_width="260dp"
        android:layout_height="22dp"
        android:layout_below="@id/visita_hora"
        android:layout_alignParentLeft="true"
        android:gravity="top"
        android:padding="3dp"
        android:text="34343h"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/escuela_jornada"
        android:layout_width="80dp"
        android:layout_height="22dp"
        android:layout_below="@id/visita_numero"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/escuela_MIE"
        android:layout_weight="1"
        android:gravity="top"
        android:padding="3dp"
        android:text="VESPERTINA"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/escuela_nombre"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/escuela_MIE"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="top"
            android:text="ESCUELA DE EDUCACION BASICA PARTICULAR DOLORES VEINTIMILLA DE GALINDO"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold"
            android:padding="3dp"/>


        <TextView
            android:id="@+id/escuela_direccion"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/escuela_nombre"
            android:layout_alignParentLeft="true"
            android:layout_weight="1"
            android:gravity="top"
            android:text="Ingresando por la escuela Padre Juan Velazco 5 cuadras al fondo y luego girar a la izquierda "
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:padding="3dp"/>


    </RelativeLayout>


